# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=autonote

# Database Initialization
# Set to true to auto-create collections and indexes on startup (development)
# Set to false to skip initialization (production - use migrations instead)
INIT_DB=true

# JWT Authentication
# Secret key for signing JWT tokens (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=30

# ============================================
# OpenTelemetry Observability Configuration
# ============================================

# Service Identification
OTEL_SERVICE_NAME=autonote-api
OTEL_SERVICE_VERSION=0.1.0
ENVIRONMENT=development

# Enable/Disable Observability Components
# Set to 'false' to disable traces (keeps logs only)
OTEL_ENABLE_TRACES=true
# Set to 'false' to disable metrics
OTEL_ENABLE_METRICS=true

# Trace Exporter Configuration
# Options: console, otlp, none
# Use 'none' to disable trace output to stdout while keeping trace context in logs
OTEL_TRACES_EXPORTER=console

# Metrics Exporter Configuration
# Options: console, otlp, none
OTEL_METRICS_EXPORTER=console

# OTLP Endpoint (only required when exporters are set to 'otlp')
# Examples:
# - Jaeger: http://localhost:4317
# - Grafana Cloud: https://otlp-gateway-prod-us-central-0.grafana.net/otlp
# - Datadog: http://localhost:4317
# - New Relic: https://otlp.nr-data.net:4317
# OTEL_EXPORTER_OTLP_ENDPOINT=

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
OTEL_LOG_LEVEL=INFO

# Log format: json (for Splunk/ELK/production) or console (for development/human-readable)
LOG_FORMAT=console

# Metrics Export Interval (milliseconds)
OTEL_METRIC_EXPORT_INTERVAL=60000

# Trace Sampling (for production - reduces overhead)
# Options: always_on, always_off, traceidratio, parentbased_always_on, parentbased_traceidratio
# OTEL_TRACES_SAMPLER=parentbased_traceidratio
# OTEL_TRACES_SAMPLER_ARG=0.1  # Sample 10% of traces

# Additional Resource Attributes
# OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production,service.namespace=autonote

# ============================================
# Common Configurations
# ============================================

# Logs only (no trace/metric output to stdout):
# OTEL_TRACES_EXPORTER=none
# OTEL_METRICS_EXPORTER=none

# Production with OTLP backend:
# OTEL_TRACES_EXPORTER=otlp
# OTEL_METRICS_EXPORTER=otlp
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-backend:4317
